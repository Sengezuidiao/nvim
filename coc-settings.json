{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        "build",
        "main.c"
      ],
      "filetypes": [
        "c",
        "cc",
        "cpp",
        "c++",
        "objc",
        "objcpp"
      ]
    },
    "lua": {
      "command": "lua-language-server",
      "filetypes": [
        "lua"
      ]
    }
  },
  "markdownlint.config": {
    "default": true,
    "line_length": false
  },
  "snippets.ultisnips.directories": [
    "$HOME/.config/nvim/Ultisnips/"
  ],
  "coc-qml": {
    "enabled": true,
    "qmlformatPath": "qmlformat",
    "qmlformatArgs": [
      "--indent-width",
      "2",
      "-i"
    ],
    "qmllsPath": "qmlls",
    "qmllsArgs": []
  }
}
